<VirtualHost *:80>
        DocumentRoot <%= @docroot %>
        ServerName <%= @server_name %>
        <% if @aliases == true -%>
        ServerAlias <%= @server_aliases.join " " %>
        <% end -%>
        <% if @rewrite_rule == true -%>
        RewriteEngine On
        RewriteCond %{HTTP:X-Forwarded-Proto} !https
        RewriteRule ^(.*)$ https://%{SERVER_NAME}$1 [R,L]
        <% end -%>
        <Directory <%= @docroot %>>
                AllowOverride All
                Require all granted
        </Directory>
        ErrorLog /var/log/httpd/<%= @error_log %>
        CustomLog /var/log/httpd/<%= @access_log %> common
        <% if @directory_match == true -%>
        <DirectoryMatch "<%= @docroot %>(assets|css|images|js|upload)">
        # Forbid execution of PHP scripts
        #php_admin_flag engine off
        # Forbid listing of files
        Options -Indexes
        </DirectoryMatch>
        <% end -%>
</VirtualHost>
